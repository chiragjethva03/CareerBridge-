<% layout("/layout/boilerplate") -%>
<div class="back-icon">
    <a href="/signup"><i class="fa-solid fa-arrow-left"></i></i></a>
</div>
<div class="main-content">
    <div class="signup">
        <h3>SignUp for Company</h3>
        <form action="/signup-company" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
            <label for="nameofcompany" class="form-label">Name of Company</label>
            <input type="text" name="nameofcompany" id="nameofcompany" placeholder="Enter your company name"
                class="form-control" required>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                plz Enter your Company name.
            </div>

            <label for="email" class="form-label">Email</label>
            <input type="email" name="email" id="email" placeholder="Enter your company Email" class="form-control"
                required>
            <div class="invalid-feedback">
                plz Enter your company emial.
            </div>

            <label for="password" class="form-label">Password</label>
            <input type="password" name="password" id="password" placeholder="Enter your password" class="form-control"
                required>
            <div class="invalid-feedback">
                plz Enter your password.
            </div>

            <label for="websitelink" class="form-label">Website Link</label>
            <input type="text" name="websitelink" id="websitelink" placeholder="Enter your Company Website"
                class="form-control" required>
            <div class="invalid-feedback">
                plz Enter your websitelink.
            </div>

            <label for="phone" class="form-label">Phone no</label>
            <input type="number" name="phone" id="phone" placeholder="Enter your Company number" class="form-control"
                required>
            <div class="invalid-feedback">
                plz Enter your company no.
            </div>

            <label for="photos" class="form-label">Upload Image</label>
            <input type="file" name="image" id="photos" placeholder="Enter your Company photos" class="form-control"
                required>
            <div class="invalid-feedback">
                plz Upload your company image.
            </div>

            <label for="location" class="form-label">location</label>
            <input type="text" name="location" id="location" placeholder="Enter your Company location"
                class="form-control" required>
            <div class="invalid-feedback">
                plz Enter your company location.
            </div>

            <label for="requirement" class="form-label">requirement</label>
            <textarea name="requirement" id="requirement" placeholder="Enter your Company requirement"
                class="form-control" required rows="4"></textarea>
            <div class="invalid-feedback">
                plz Enter your company requirement.
            </div>

            <label for="industry" class="form-label">Industry</label>
            <input type="text" name="industry" id="industry" placeholder="Enter your Company industry"
                class="form-control" required>
            <div class="invalid-feedback">
                plz Enter your company industry.
            </div>

            <label for="companysize" class="form-label">Company Size</label>
            <input type="number" name="companysize" id="companysize" placeholder="Enter your companysize"
                class="form-control" required>
            <div class="invalid-feedback">
                plz Enter your companysize.
            </div>

            <label for="founded" class="form-label">Founded in</label>
            <input type="number" name="founded" id="founded" placeholder="Enter your founded date"
                class="form-control" required>
            <div class="invalid-feedback">
                plz Enter your company founded date.
            </div>



            <button class="btn" style="background-color: #A4CDED;">Sign Up</button>

        </form>
    </div>
</div>
    